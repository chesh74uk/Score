<p></p>
<div class="table table-bordered">
    <table>
        <thead class="thead-dark">
            <tr>
                <th>Meeting date</th>
                <th>Home team</th>
                <th>Away team</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            <%  @meetings.each do |meeting| %>
            <tr>
                <td><%= meeting.meeting_date.strftime("%A %B %C %G") %></td>
                <td><%= meeting.home_team %></td>
                <td><%= meeting.away_team %></td>
                <td><%= link_to 'Show', meeting %></td>
                <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
                <td><%= link_to 'Delete', meeting, method: :delete,
                                     data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>

        </tbody>
    </table>
</div>

<%= link_to "New meeting", new_meeting_path %>

