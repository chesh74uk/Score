<%= simple_form_for @meeting do |f| %>
    <%= f.input :meeting_date %>
    <%= f.input :home_team %>
    
        <%= f.simple_fields_for :home_riders do |h| %>
            <%= h.input :name %>
        <% end %>
    
    <%= f.input :away_team %>
    
        <%= f.simple_fields_for :home_riders do |a| %>
            <%= a.input :name %>
        <% end %>
        
    <%= f.button :submit %>
<% end %>