<h1>Show race</h1>
<div class="table table-bordered">
    <table>
        <thead class="thead-dark">
            <tr>
                <th>Heat</th>
                <th>Blue</th>
                <th>Red</th>
                <th>White</th>
                <th>Yellow</th>
                <th>Heat time</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><%= @race.heat_number %></td>
                <td><%= @race.blue_score %></td>
                <td><%= @race.red_score %></td>
                <td><%= @race.white_score %></td>
                <td><%= @race.yellow_score %></td>
                <td><%= @race.heat_time %></td>
            </tr>
        </tbody>
    </table>
</div>

<%= link_to "Back", race_path %>